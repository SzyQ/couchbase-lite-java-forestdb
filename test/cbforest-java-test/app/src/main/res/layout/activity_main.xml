<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run Database Test"
        android:id="@+id/button_run_database_test"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="34dp"
        android:layout_marginStart="34dp"
        android:layout_marginTop="27dp"
        android:clickable="true"
        android:onClick="onClickButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUN VERSIONED DOCUMENT TEST"
        android:id="@+id/button_run_versioneddocument_test"
        android:layout_below="@+id/button_run_database_test"
        android:layout_alignLeft="@+id/button_run_database_test"
        android:layout_alignStart="@+id/button_run_database_test"
        android:clickable="true"
        android:onClick="onClickButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Run Collatable Test"
        android:id="@+id/button_run_collatable_test"
        android:layout_below="@+id/button_run_versioneddocument_test"
        android:layout_alignLeft="@+id/button_run_versioneddocument_test"
        android:layout_alignStart="@+id/button_run_versioneddocument_test"
        android:onClick="onClickButton"
        android:clickable="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUN INDEX TEST"
        android:id="@+id/button_run_index_test"
        android:layout_below="@+id/button_run_collatable_test"
        android:layout_alignLeft="@+id/button_run_collatable_test"
        android:layout_alignStart="@+id/button_run_collatable_test"
        android:clickable="true"
        android:onClick="onClickButton" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUN Map Reduce TEST"
        android:id="@+id/button_run_mapreduce_test"
        android:layout_below="@+id/button_run_index_test"
        android:layout_alignLeft="@+id/button_run_index_test"
        android:layout_alignStart="@+id/button_run_index_test"
        android:onClick="onClickButton"
        android:clickable="true" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RUN ALL TEST"
        android:id="@+id/button_run_all_test"
        android:layout_below="@+id/button_run_mapreduce_test"
        android:layout_alignLeft="@+id/button_run_mapreduce_test"
        android:layout_alignStart="@+id/button_run_mapreduce_test"
        android:onClick="onClickButton"
        android:clickable="true" />
</RelativeLayout>
